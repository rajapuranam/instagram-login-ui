<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/insta_gradient"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        android:text="Instagram"
        android:textSize="38sp"
        android:textAlignment="center"
        android:textColor="#fff"
        android:fontFamily="@font/kaushanscript_regular"
        />

    <EditText
        android:id="@+id/email"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:fontFamily="@font/roboto_regular"
        android:background="#54C5C3C3"
        android:padding="14dp"
        android:layout_marginTop="50dp"
        android:hint="Username"
        android:textSize="14sp"
        android:textColor="#fff"
        android:textColorHint="#B9FFFFFF"
        />

    <EditText
        android:id="@+id/password"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/email"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#54C5C3C3"
        android:fontFamily="@font/roboto_regular"
        android:padding="14dp"
        android:layout_marginTop="15dp"
        android:textSize="14sp"
        android:hint="Password"
        android:textColor="#fff"
        android:textColorHint="#B9FFFFFF"
        />

    <TextView
        android:id="@+id/btn"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/password"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto_regular"
        android:textColor="#77FFFFFF"
        android:text="Log In"
        android:textSize="15sp"
        android:textAlignment="center"
        android:padding="14dp"
        android:background="@drawable/login_back"
        />

    <TextView
        android:id="@+id/forget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn"
        android:text="@string/forgot"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textSize="14sp"
        android:textColor="#C7FFFFFF"
        android:fontFamily="@font/roboto_regular"
        />

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/forget"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <View
            android:layout_width="130dp"
            android:layout_height="0.1dp"
            android:id="@+id/view1"
            android:background="#85ffffff"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:text="OR"
            android:fontFamily="@font/roboto_bold"
            android:textSize="15sp"
            android:textColor="#C7FFFFFF"
            />
        <View
            android:layout_width="130dp"
            android:layout_height="0.1dp"
            android:id="@+id/view2"
            android:background="#85ffffff"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/facebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/layout"
        android:text="Login with facebook"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:drawableLeft="@drawable/facebook_logo"
        android:drawablePadding="10dp"
        android:fontFamily="@font/roboto_regular"
        android:textSize="14sp"
        android:textColor="#D7ffffff"
        android:drawableTint="#fff"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/signup"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#f2ffffff"
        android:textSize="14sp"
        android:background="#54C5C3C3"
        android:fontFamily="@font/roboto_regular"
        />

</androidx.constraintlayout.widget.ConstraintLayout>